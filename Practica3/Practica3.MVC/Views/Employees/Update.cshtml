@model  Practica3.MVC.Models.EmployeesView
@{
    ViewBag.Title = "Actualizacion de Datos";
}

<h2>Actualizar Datos Empleados</h2>

@using (Html.BeginForm("Update", "Employees", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(r => r.Id)
        Nombre: @Html.TextBoxFor(r => r.FirstName, new { @class = "form-control" })
        Apellido: @Html.TextBoxFor(r => r.LastName, new { @class = "form-control" })
        Ciudad: @Html.TextBoxFor(r => r.City, new { @class = "form-control" })
        Pais: @Html.TextBoxFor(r => r.Country, new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" name="Guardar" value="Guardar" class="btn-primary" />
        @Html.ActionLink("Volver", "Index", "Employees", new { @class = "btn btn-light" })
    </div>
}